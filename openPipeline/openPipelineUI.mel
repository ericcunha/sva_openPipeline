//###########################################
// Name: 		openPipelineRename
// Description: 	Calls the python function for renaming an asset
// Input: 				none
// Returns: 			none
//###########################################
global proc openPipelineRename()
{
	string $error="";
	string $currSelected[] = openPipelineGetCurrentlySelectedItem(2, 2);
	string $assetPath = openPipelineGetFileName(2, $currSelected[0], $currSelected[1], $currSelected[2], "folder", 0, 0);
	print "$assetPath = ";
	print $assetPath;
	$newName = `textField -q -text op_newNameField`;
	if (!isValidString($newName, "([a-zA-Z0-9_])*"))
		$error+="Invalid Asset Name (no special characters or spaces allowed).\n";
	if(size($error))
	{
		warning("openPipelineCreateNewItem: "+$error);
	}
	else
	{
		global string $openPipeline_scriptPath;
		python "import os";
		python("path = os.path.join('" + $openPipeline_scriptPath + "', 'openPipeline')");
		//python("print 'path = %s' % path");
		python("import sys");
		python("sysPath = sys.path");
		python("appendGo = 1");
		python("for aPath in sysPath:\n if(aPath == path): appendGo = 0");
		python("print 'appendGo = %s' % appendGo");
		////// Append if necessary the openPipeline directory path
		python("if appendGo:\n sys.path.append(path)\n print 'appending %s' % path");
		
		// And Here comes the MEL to Python work-around
		//python("path = os.path.join('" + $openPipeline_scriptPath + "', 'openPipeline/')");
		//python("appendGo = 1");
		//python("for aPath in sysPath: \n if(aPath == path): appendGo = 0");
		//python("if appendGo:\n sys.path.append(path)\n print 'appending %s' % path");
		
		python("import renameAsset");
		python("renameAsset.renameAsset(\""+$assetPath+"\",\""+$newName+"\")");
		openPipelineUpdateAssetList(1);
		openPipelineRemoveSecondaryWindows;
	}
}


