	$fileId = `fopen $usersFile "w"`;
	for ( $user in $users )
		fprint $fileId ($user + "\n");
	fclose $fileId;
}

// Read the users.xml file
global proc string[] openPipelineGetUsers()
{
	global string $openPipeline_projectFilePath;
	string $usersFile =  $openPipeline_projectFilePath+"openPipeline_users.xml";
	
	$fileId = `fopen $usersFile "r"`;
	string $nextLine = `fgetline $fileId`;
	string $users[];
	while ( size( $nextLine ) > 0 ) {
	    $users[`size $users`] = strip($nextLine);
	    $nextLine = `fgetline $fileId`;
	}
	fclose $fileId;
	
	return $users;
}

